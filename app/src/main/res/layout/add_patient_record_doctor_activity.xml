<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        app:title="Fill Patient Record"
        app:titleTextColor="#fff"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_height="?attr/actionBarSize" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/patient_name_tv"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="#fff"
            android:text="Patient Name : XYZ"
            android:background="#5b6982"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

            <EditText
                android:id="@+id/disease_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Disease Name"
                android:inputType="text"
                android:textColor="#000" />
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorAccent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/disease_type_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Disease Type"
                android:text="NA"
                android:inputType="text"
                android:textColor="#000" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorAccent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/disease_catagory_et"
                android:hint="Enter Disease Catagory"
                android:textColor="#000"
                android:text="NA"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorAccent"
            android:layout_height="wrap_content">
            <EditText
                android:text="NA"
                android:id="@+id/disease_sub_catagory_et"
                android:hint="Enter Disease Sub Catagory"
                android:textColor="#000"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorAccent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/allergies_et"
                android:hint="Enter Allergies"
                android:text="NA"
                android:textColor="#000"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/symptopms_et"
                android:hint="Enter Symptoms"
                android:textColor="#000"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="#3468ed"
            android:text="Is this record important for future treatments"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/flag_yes_rb"
                android:layout_width="wrap_content"
                android:text="Yes"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/flag_no_rb"
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:text="Smoking and Alcohol Consumption"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#3468ed"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/yes_rb"
                android:layout_width="wrap_content"
                android:text="Yes"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/no_rb"
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/medicines_et"
                android:hint="Enter Prescribed Medicines"
                android:textColor="#000"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="horizontal"
            />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/tests_et"
                android:hint="Enter Tests"
                android:textColor="#000"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="horizontal"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorAccent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/consultancy_fees_et"
                android:hint="Consultancy Fees"
                android:text="0"
                android:textColor="#000"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorAccent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ac_fees_et"
                android:hint="AC Fees"
                android:textColor="#000"
                android:text="0"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/pharmacy_fees_et"
                android:hint="Pharmacy Fees"
                android:textColor="#000"
                android:inputType="number"
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColorHint="@color/colorAccent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/hospital_fees_et"
                android:text="0"
                android:hint="Hospital Fees"
                android:textColor="#000"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#FFF"
            android:id="@+id/submit_bt"
            android:background="@color/colorPrimary"
            android:text="Continue"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />



    </LinearLayout>
</ScrollView>
</LinearLayout>