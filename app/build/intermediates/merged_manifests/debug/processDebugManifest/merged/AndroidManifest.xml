<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slp.happyhearts"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.slp.happyhearts.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.slp.happyhearts.patient.PatientLogin" />
        <activity
            android:name="com.slp.happyhearts.patient.MainActivityPatient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.slp.happyhearts.doctor.DoctorLogin" />
        <activity
            android:name="com.slp.happyhearts.doctor.MainActivityDoctor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.slp.happyhearts.doctor.PatientRecord"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.slp.happyhearts.doctor.TreatmentDetailsForDoctor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.slp.happyhearts.doctor.AddPatientRecord"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.slp.happyhearts.doctor.OfflineImportantRecordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.slp.happyhearts.patient.TreatmentDetailsForPatient" />
        <activity
            android:name="com.slp.happyhearts.doctor.InsuranceClaimDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>